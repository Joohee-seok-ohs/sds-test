{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": false
  },
  "include": [
    "src/index.ts",
    "src/ui/primitives/Button/Button.tsx",
    "src/ui/utils/AnchorOrButton.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.stories.tsx"
  ]
}
